// Custom styles.
body {
  font-size: 16px;
  z-index: 9;
  color:#24292e;
  line-height: 1.8;
}
.fr {
  float: right;
}
p {
  margin-bottom: 16px;
}
.posts-expand {
  padding-top: 0;
  .post-title,.post-meta {
    text-align: left;
  }
  .post-title-link {
    font-size: 24px;
    color: #24292e;
  }
  .post-title {
    font-size: 30px;
    font-weight: 600;
    padding-bottom: 6px;
    line-height:1.25;
  }
  .post-eof {
    width: 100%
    background-color: #fff;
    border-top: 1px solid #e5e5e5;
    margin: 20px 0;
  }
  .post-meta {
    margin-top: 0;
    margin-bottom: 0;
  }
  .post-body {
    text-align: left;
    h1, h2 ,h3 {
      padding-top: 0;
      margin-top: 24px;
      margin-bottom: 16px;
      line-height:1.25;
      padding-bottom: 6px;
      border-bottom: 1px solid #ddd;
      font-weight: 600;
    }
    h1 {
      font-size: 28px;
      color: red;
    }
    h2 {
      font-size: 24px;
    }
    h3 {
      font-size: 20px;
      border-bottom-style: dashed;
    }
    a {
      color: #2780e3;
      border-bottom-color: #2780e3;
    }
    li + li{
      margin-top: 0.3em;
    }
  }
}

.post-button {
  margin-top: 0;
  .btn {
    margin: 0;
    color: #2780e3;
    font-size: 14px;
    background: transparent;
    border-radius: 0;
    line-height: 2;
    padding: 0;
    border: none;
    &:hover {
      border-color: transparent;
      color: #2780e3;
      background-color: transparent;
    }
  }
}

@media (max-width: 767px) {
  .posts-expand {
    padding-top: 20px;
    margin: 0;
    .post-title {
      font-size: 24px;
    }
    .post-body {
      h1,h2,h3 {
        border-bottom-width: 0;
        font-weight: bold;
      }
      h1 {
        font-size: 22px;
      }
      h2 {
        font-size: 20px;
        color: #ffb804;
      }
      h3 {
        font-size: 18px;
      }
      .highlight {
        margin-left: -15px;
        margin-right: -15px;
      }
    }
  }

  .content-wrap {
    padding: 0 15px;
  }
}
.header-inner {
  padding-top: 30px;
  padding-bottom: 30px
  .site-subtitle {
    margin-top: 0;
    font-size: 12px;
  }
}
.brand {
  background: transparent;
  .myavatar {
    weight: 60px;
    height: 60px;
    border-radius: 30px;
  }
}
